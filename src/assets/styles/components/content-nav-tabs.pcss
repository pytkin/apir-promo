
.content-nav-tabs {
  display: flex;

  a {
    flex: 0 0 auto;
    border: 1px solid #C4C4C4;
    display: inline-block;
    line-height: 32px;
    font-size: 14px;
    color: #000;
    padding: 0 16px;

    &:first-of-type {
      border-radius: 2px 0 0 2px;
    }

    &:last-of-type {
      border-radius: 0 2px 2px 0;
    }

    &:hover {
      background-color: color(#ccc l(+ 18%));
    }

    + a {
      border-left: none;
    }
  }
}
